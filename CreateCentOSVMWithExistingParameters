--- #Creates a Windows server with existing parameters.
- name: "Creating Windows Server(s) with existing parameters"
  hosts: localhost
  connection: local
  vars_prompt: 
    - name: "instances_number"
      prompt: "How many Windows instances would you like to create"
      private: yes
      default: 1
    - name: "resourcegroup_name"
      prompt: "What resource group do you want to launch the server(s) in"
      private: no
      default: "awx"
    - name: "vm_root_name"
      prompt: "Name of the vm root"
      private: no
      default: "new-vm"
    - name: "vm_size"
      prompt: "Size of the vm"
      private: no
      default: "Standard_B2s"
    - name: "managed_disk_type"
      prompt: "Type of the managed disk"
      private: no
      default: "Standard_LRS"
#------------------------------------------------------
    - name: "admin_username"
      prompt: "Enter an admin username"
      private: no
      default: "Timi0"
    
    - name: "virtualnetwork_name"
      prompt: "Enter the virtual network name"
      private: no
      default: "awx-vnet"

    - name: "securitygroup_name"
      prompt: "Enter the security group name"
      private: no
      default: "AWX-REDHAT-nsg"

    - name: "subnet_name"
      prompt: "Enter the subnet name"
      private: no
      default: "default"
    
    - name: "project_prefix"
      prompt: "Enter the project prefix"
      private: no
      default: "new"
  
  vars:
    - public_ip_name: "{{project_prefix}}-ip"
    - nic_root_name: "{{project_prefix}}-nic"
#-------------------------------------------------------
  tasks:  
    - name: "Create a {{nic_root_name}}X network interface for each VM"
      azure_rm_networkinterface:
        name: "{{nic_root_name}}{{item}}"
        resource_group: "{{resourcegroup_name}}"
        virtual_network: "{{virtualnetwork_name}}"
        subnet_name: "{{subnet_name}}"
        security_group: "{{securitygroup_name}}"
        ip_configurations:
          - name: "ipconfig"
            public_ip_address_name: "{{public_ip_name}}"
            primary: True
      with_sequence: count="{{instances_number}}"
    - name: "Create {{vm_root_name}}X CentOS VM with existing NIC"
      azure_rm_virtualmachine:
        resource_group: "{{resourcegroup_name}}"
        name: "{{vm_root_name}}{{item}}CentOS"
        vm_size: "{{vm_size}}"
        managed_disk_type: "{{managed_disk_type}}"
        data_disks:
        - lun: 0
          disk_size_gb: 4
          managed_disk_type: "{{managed_disk_type}}"
        - lun: 1
          disk_size_gb: 4
          managed_disk_type: "{{managed_disk_type}}"
        admin_username: "{{admin_username}}"
        ssh_password_enabled: false
        ssh_public_keys:
          - path: "/home/{{admin_username}}/.ssh/authorized_keys"
            key_data: "ssh-rsa  rsa-key-20181205"
        network_interface_names: "{{nic_root_name}}{{item}}"
        image:
          offer: CentOS
          publisher: OpenLogic
          sku: '7.4'
          version: latest
      with_sequence: count="{{instances_number}}"
